{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "prettier",
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-underscore-dangle": "off"
    },
    "globals": {
        "Base64": true
    },
    "settings": {
        "import/resolver": {
          "alias": [
                ["@root", "./"],
                ["@classes", "./classes"],
                ["@errors", "./errors"],
                ["@logger", "./logger"],
                ["@middleware", "./middleware"],
                ["@routes", "./routes"],
                ["@utils", "./utils"]
            ]
        }
    }
}
